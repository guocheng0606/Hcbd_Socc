<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="264px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/image_map_more_bg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px">
        <TextView
            android:id="@+id/tv_device_state_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_state_list"
            android:gravity="center"
            android:textSize="28px"
            android:textColor="@color/white"
            android:paddingTop="18px"
            android:paddingBottom="18px"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tv_auto_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auto_refresh"
            android:gravity="center"
            android:textSize="28px"
            android:textColor="@color/white"
            android:paddingTop="18px"
            android:paddingBottom="18px"/>
    </LinearLayout>

</RelativeLayout>