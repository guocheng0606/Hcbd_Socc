<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/selector_back_bg"
            android:paddingLeft="30px"
            android:paddingRight="20px"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="36px"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/selector_save_bg"
            android:layout_alignParentRight="true"
            android:paddingRight="30px"
            android:paddingLeft="15px"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="156px"
                android:layout_height="wrap_content"
                android:text="@string/warn_name"
                android:textSize="26px"
                android:textColor="@color/black"
                android:layout_marginLeft="30px"/>
            <EditText
                android:id="@+id/et_warn_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:background="@drawable/image_input_bg"
                android:hint="@string/input_warn_name"
                android:paddingLeft="30px"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="26px"
                android:inputType="text"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="156px"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_name"
                    android:textSize="26px"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/image_input_bg"
                android:layout_marginRight="30px">
                <com.android.hcbd.socc.widget.CustomSpinner
                    android:id="@+id/sp_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="156px"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/s1"
                    android:textSize="26px"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/image_input_bg"
                android:layout_marginRight="30px">

                <com.android.hcbd.socc.widget.CustomSpinner
                    android:id="@+id/sp_s1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"/>
                <EditText
                    android:id="@+id/et_s1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="30px"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="26px"
                    android:hint="@string/input_s1"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:maxLines="1"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="156px"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/s2"
                    android:textSize="26px"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/image_input_bg"
                android:layout_marginRight="30px">

                <com.android.hcbd.socc.widget.CustomSpinner
                    android:id="@+id/sp_s2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"/>
                <EditText
                    android:id="@+id/et_s2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="30px"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="26px"
                    android:hint="@string/input_s2"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:maxLines="1"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="156px"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/s3"
                    android:textSize="26px"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/image_input_bg"
                android:layout_marginRight="30px">

                <com.android.hcbd.socc.widget.CustomSpinner
                    android:id="@+id/sp_s3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15px"/>
                <EditText
                    android:id="@+id/et_s3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="30px"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="26px"
                    android:hint="@string/input_s3"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:maxLines="1"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
