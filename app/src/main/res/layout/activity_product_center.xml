<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/selector_back_bg"
            android:paddingLeft="30px"
            android:paddingRight="20px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_center"
            android:textColor="@color/white"
            android:textSize="36px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="376px"
        android:orientation="horizontal"
        android:layout_marginTop="10px">
        <LinearLayout
            android:id="@+id/ll_produce_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/selector_bg_click"
            android:layout_marginLeft="10px"
            android:layout_marginRight="5px">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/image_hx_mini_1"
                android:scaleType="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HX mini-1"
                android:textColor="@color/black"
                android:textSize="26px"
                android:gravity="center"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_produce_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/selector_bg_click"
            android:layout_marginLeft="5px"
            android:layout_marginRight="10px">>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/image_hx_p8"
                android:scaleType="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HX-P8"
                android:textColor="@color/black"
                android:textSize="26px"
                android:gravity="center"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
