<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/selector_back_bg"
            android:paddingLeft="30px"
            android:paddingRight="20px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deal_warn_data"
            android:textColor="@color/white"
            android:textSize="36px"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/selector_save_bg"
            android:paddingRight="25px"
            android:paddingLeft="15px"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line"
        android:layout_marginTop="20px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:orientation="horizontal">
            <TextView
                android:text="@string/device_name_"
                style="@style/device_info_text_title_style" />
            <TextView
                android:id="@+id/tv_device_name"
                style="@style/device_info_text_style" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="65px"
            android:orientation="horizontal">
            <TextView
                android:text="@string/danger_name"
                style="@style/device_info_text_title_style" />
            <TextView
                android:id="@+id/tv_danger_name"
                style="@style/device_info_text_style" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:orientation="horizontal">
            <TextView
                android:text="@string/v1"
                style="@style/device_info_text_title_style" />
            <TextView
                android:id="@+id/tv_v1"
                style="@style/device_info_text_style" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:orientation="horizontal">
            <TextView
                android:text="@string/s1"
                style="@style/device_info_text_title_style" />
            <TextView
                android:id="@+id/tv_s1"
                style="@style/device_info_text_style" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:orientation="horizontal">
            <TextView
                android:text="@string/v2"
                style="@style/device_info_text_title_style" />
            <TextView
                android:id="@+id/tv_v2"
                style="@style/device_info_text_style" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:orientation="horizontal">
            <TextView
                android:text="@string/s2"
                style="@style/device_info_text_title_style" />
            <TextView
                android:id="@+id/tv_s2"
                style="@style/device_info_text_style" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:orientation="horizontal">
            <TextView
                android:text="@string/v3"
                style="@style/device_info_text_title_style" />
            <TextView
                android:id="@+id/tv_v3"
                style="@style/device_info_text_style" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:orientation="horizontal">
            <TextView
                android:text="@string/s3"
                style="@style/device_info_text_title_style" />
            <TextView
                android:id="@+id/tv_s3"
                style="@style/device_info_text_style" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="@string/real_result"
                style="@style/device_info_text_title_style" />
            <EditText
                android:id="@+id/et_deal_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_input_bg"
                android:hint="@string/input_real_result"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="45px"
                android:paddingLeft="25px"
                android:textSize="26px"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line"/>

</LinearLayout>
