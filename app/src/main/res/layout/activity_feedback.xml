<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/selector_back_bg"
            android:paddingLeft="30px"
            android:paddingRight="20px"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback"
            android:textColor="@color/white"
            android:textSize="36px"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/selector_save_bg"
            android:layout_alignParentRight="true"
            android:paddingRight="20px"
            android:paddingLeft="10px"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="460px"
                android:background="@color/white"
                android:hint="@string/input_feedback"
                android:gravity="top"
                android:padding="30px"
                android:textSize="28px"
                android:textColor="@color/text_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:text="@string/add_feedback_image"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/gray01"/>
                <TextView
                    android:id="@+id/tv_selnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1/4"
                    android:textSize="26px"
                    android:textColor="@color/gray01"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83px"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:layout_marginTop="35px"
                android:layout_marginBottom="35px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/contact_way"
                    android:gravity="center_vertical"
                    android:textSize="28px"
                    android:textColor="@color/text_color"/>
                <EditText
                    android:id="@+id/et_contact_way"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/input_contact_way"
                    android:textSize="28px"
                    android:textColor="@color/text_color"
                    android:paddingLeft="50px"
                    android:background="@null"
                    android:inputType="text"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
