<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/selector_back_bg"
            android:paddingLeft="30px"
            android:paddingRight="20px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/query_info"
            android:textColor="@color/white"
            android:textSize="36px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <com.lany.state.StateLayout
        android:id="@+id/stateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/custom_empty_view"
        app:errorView="@layout/custom_error_view"
        app:loadingView="@layout/custom_loading_view"
        app:networkView="@layout/custom_network_view"
        app:viewState="content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65px"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="156px"
                    android:layout_height="wrap_content"
                    android:text="@string/device_name"
                    android:textSize="26px"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/image_input_bg"
                    android:layout_marginRight="30px">
                    <EditText
                        android:id="@+id/et_device_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/input_device_name"
                        android:paddingLeft="30px"
                        android:textColor="@color/text_color"
                        android:textSize="26px"
                        android:background="@null"
                        android:inputType="text"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                    <ImageView
                        android:id="@+id/iv_device_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_arrow"
                        android:paddingRight="25px"
                        android:paddingLeft="10px"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65px"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="156px"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30px"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/begin_time"
                        android:textSize="26px"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/image_input_bg"
                    android:layout_marginRight="30px">
                    <TextView
                        android:id="@+id/tv_begin_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/select_begin_time"
                        android:paddingLeft="30px"
                        android:textColor="@color/text_color"
                        android:textSize="26px"
                        android:gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/iv_begin_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_arrow"
                        android:paddingRight="25px"
                        android:paddingLeft="10px"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="156px"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30px"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_time"
                        android:textSize="26px"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/image_input_bg"
                    android:layout_marginRight="30px">
                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/select_end_time"
                        android:paddingLeft="30px"
                        android:textColor="@color/text_color"
                        android:textSize="26px"
                        android:gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/iv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_arrow"
                        android:paddingRight="25px"
                        android:paddingLeft="10px"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="65px"
                android:background="@drawable/shape_ok_button_bg"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40px"
                android:text="@string/search"
                android:textSize="28px"
                android:textColor="@color/white"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"/>
        </LinearLayout>
    </com.lany.state.StateLayout>

</LinearLayout>
